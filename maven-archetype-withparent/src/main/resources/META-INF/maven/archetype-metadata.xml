<?xml version="1.0" encoding="UTF-8"?>

<archetype-descriptor
    xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
    name="${artifactId}">

    <requiredProperties>
        <requiredProperty key="githubAccount">
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
            <excludes>
                <exclude>module-info.java</exclude>
            </excludes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/main/java</directory>
            <includes>
                <include>module-info.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>src/test-integration/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/test-integration/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/site</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory />
            <includes>
                <include>.dockerignore</include>
                <include>.gitignore.template</include>
                <include>wrappers.sh</include>
                <include>mvnw</include>
                <include>mvnw.cmd</include>
                <include>rules.xml</include>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="false">
            <directory>.github</directory>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="false">
            <directory>docker</directory>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="false">
            <directory>.mvn</directory>
        </fileSet>
    </fileSets>

</archetype-descriptor>